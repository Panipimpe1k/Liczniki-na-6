<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Licznik.CounterView">
    <Border Stroke="Gray" StrokeShape="RoundRectangle 10" Padding="10">
    <VerticalStackLayout Spacing="10">
        <Label 
            x:Name="NameLabel" 
            FontSize="18"/>
        
        <Label 
            x:Name="ValueLabel" 
            FontSize="32"
            HorizontalOptions="Center"/>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button Text="-" 
                        Clicked="OnMinusClicked" 
                        WidthRequest="60"/>
                <Button Text="+" 
                        Clicked="OnPlusClicked" 
                        WidthRequest="60"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Fill">
                <Button Text="Delete" 
                Clicked="OnDeleteClicked" 
                WidthRequest="70"
                BackgroundColor="Tomato"/>
                <Button Text="Reset"
                Clicked="OnResetClicked" 
                WidthRequest="70"
                BackgroundColor="#D35EAF"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Border>
</ContentView>