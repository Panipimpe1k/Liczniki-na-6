<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Licznik.MainPage"
             Title="Counter">

    <Grid RowDefinitions="Auto,Auto,*" Padding="20" RowSpacing="10">
        <HorizontalStackLayout Grid.Row="0">
            <Entry x:Name="CounterNameEntry" Placeholder="Enter counter name"
                   WidthRequest="380"/>
            <Entry x:Name="StartValueEntry" Placeholder="Enter start value"
                   WidthRequest="200"/>

        </HorizontalStackLayout>
        <Button Text="Add Counter" Clicked="OnAddCounterClicked" Grid.Row="1"/>


        <ScrollView Grid.Row="2">
            <VerticalStackLayout x:Name="CounterContainer" Spacing="10" VerticalOptions="Start"/>
        </ScrollView>
    </Grid>


</ContentPage>
